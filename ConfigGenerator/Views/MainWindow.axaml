<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:ConfigGenerator.ViewModels"
        x:DataType="vm:MainWindowViewModel"
        xmlns:views="clr-namespace:ConfigGenerator.Views"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="ConfigGenerator.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="Smart Room Config Generator">

    <Window.Styles>
        <!-- Style cho menu item -->
        <Style Selector="Button.MenuButton">
            <Setter Property="Height" Value="50"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,3"/>
            <Setter Property="Transitions">
                <Setter.Value>
                    <Transitions>
                        <BrushTransition Property="Background" Duration="0:0:0.2"/>
                    </Transitions>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Style cho menu item khi hover -->
        <Style Selector="Button.MenuButton:pointerover">
            <Setter Property="Background" Value="#3E4A69"/>
        </Style>

        <!-- Style cho menu item được chọn -->
        <Style Selector="Button.MenuButton.Selected">
            <Setter Property="Background" Value="#4E5A79"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Styles>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#2E3A59">
            <DockPanel>
                <Border DockPanel.Dock="Top" Height="60" Background="#1E2A49">
                    <TextBlock Text="Smart Room Config"
                               Foreground="White"
                               FontWeight="Bold"
                               FontSize="18"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Center"/>
                </Border>


                <StackPanel Margin="0,10">
                    <Button Content="Sensor Data Collector"
                            Classes="MenuButton"
                            Classes.Selected="{Binding IsSensorDataCollectorSelected}"
                            Command="{Binding ShowSensorDataCollectorViewCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="M12,3L2,12H5V20H19V12H22L12,3M12,7.7L16.29,12L15,12V18H9V12L7.71,12L12,7.7Z"
                                          Width="18" Height="18"
                                          Foreground="White"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="センサーデータ収集" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    
                    <Button Content="Exchange Sync"
                            Classes="MenuButton"
                            Classes.Selected="{Binding IsExchangeSyncSelected}"
                            Command="{Binding ShowExchangeSyncViewCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="M20,8L12,13L4,8V6L12,11L20,6M20,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V6C22,4.89 21.1,4 20,4Z"
                                          Width="18" Height="18"
                                          Foreground="White"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="Exchange連携" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>

                    <Button Content="System Settings"
                            Classes="MenuButton"
                            Classes.Selected="{Binding IsSystemSettingsSelected}"
                            Command="{Binding ShowSystemSettingsViewCommand}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <PathIcon Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                                          Width="18" Height="18"
                                          Foreground="White"
                                          Margin="0,0,10,0"/>
                                <TextBlock Text="システム設定" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
