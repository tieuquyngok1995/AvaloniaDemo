<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:AvaloniaMiaDev.ViewModels"
             mc:Ignorable="d" d:DesignWidth="400" d:DesignHeight="450"
             x:Class="AvaloniaMiaDev.Views.SecretView"
             x:DataType="vm:SecretViewModel">
  <StackPanel HorizontalAlignment="Center" Margin="10" Spacing="10">
    <TextBlock Text="Super Secret Token" FontSize="18" FontWeight="Bold" Margin="5 20 5 10"
               HorizontalAlignment="Center"/>
    <TextBox Text="{Binding Token}" IsReadOnly="True"
             HorizontalAlignment="Center"
             TextWrapping="Wrap" Margin="12 5 12 12" MaxWidth="500" />
  </StackPanel>
</UserControl>
